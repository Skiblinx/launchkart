# Database Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=launchkart

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@launchkart.com

# KYC Service Configuration
HYPERVERGE_API_KEY=your-hyperverge-api-key
IDFY_API_KEY=your-idfy-api-key

# Payment Gateway Configuration - Razorpay (India)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Payment Gateway Configuration - Stripe (International)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Development Mode (set to 'true' for development)
DEVELOPMENT_MODE=true

# Admin Configuration
ADMIN_EMAIL=admin@launchkart.com

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Session Configuration
SESSION_TIMEOUT_HOURS=24